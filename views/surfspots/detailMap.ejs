<%- include('partials/headMap') %>

    <%- include('partials/navbar.ejs') %> 
    
    <div class="row mb-3"><div  class="col-10 offset-1">
      <div class="card" >
        <!-- <img src="<%=spot.image%>" class="card-img-top" alt="IMG"> -->
        
        <div class="card-body">
          <h5 class="card-title"><%= spot.spotName %></h5>
          <%if(spot.hasCoordinates){%>
            
            
    <!--The div element for the map -->
    <div style= "height: 400px;
    width: 100%"id="map"></div>

    <!-- 
     The `defer` attribute causes the callback to execute after the full HTML
     document has been parsed. For non-blocking uses, avoiding race conditions,
     and consistent behavior across browsers, consider loading using Promises
     with https://www.npmjs.com/package/@googlemaps/js-api-loader.
    -->
  
 
    <script
      src= "<%=apiKey%>"
      async
      defer
    ></script>
    <li class="list-group-item mb-2"><%= spot.coordinates.Lat+"   "+spot.coordinates.Lon%>  </li>
        <% } %> 
          <p class="card-text">Description: <%= spot.info.description %></p>
          <p class="card-text">Atmosphere: <%= spot.info.atmosphere %></p>
          <p class="card-text">General: <%= spot.info.general %></p>
        </div>
        <ul class="list-group list-group-flush">
          <%if(spot.locationStringify()!==''){%>
          <li class="list-group-item">Location: <%= spot.locationStringify()%> </li>
         <% }else{ %>
           <li class="list-group-item">Location: 1<%= spot.location.longFormLocation%> </li>
         <%} %> 
          
          <li class="list-group-item">
            <h5>Surf Spot Quality</h5>
            <p class="fw-light mb-0">Wave Quality: <%= spot.surfSpotQuality.waveQuality %> </p>
          <p class="fw-light mb-0">Experience Level: <%= spot.surfSpotQuality.experience %> </p>
          <p class="fw-light mb-0">Consistency: <%= spot.surfSpotQuality.frequency %></p>
          </li>
          
          <li class="list-group-item">
          <h5>Wave Characteristics</h5>
          <p class="fw-light mb-0">Break Type: <%= spot.waveChars.type %></p>
          <p class="fw-light mb-0">Break Direction: <%= spot.waveChars.direction %></p>
          <p class="fw-light mb-0">Bottom Type: <%= spot.waveChars.bottom %></p>
          <p class="fw-light mb-0">Wave Power <%= spot.waveChars.power %></p>
          <p class="fw-light mb-0">Average Wave Length: <%= spot.waveChars.length %></p>
          <p class="fw-light mb-0">Good Wave Length: <%= spot.waveChars.goodlength %></p>
          </li>
          <li class="list-group-item">
            <h5>Ideal Environmentals: </h5>
            <p class="fw-light mb-0">Swell Direction: <%= spot.enviroChars.swellDir %></p>
            <p class="fw-light mb-0">Wind Direction: <%= spot.enviroChars.windDir%></p>
            <p class="fw-light mb-0">Swell Size: <%= spot.enviroChars.swellSize %></p>
            <p class="fw-light mb-0">Tide Position:<%= spot.enviroChars.tidePos %></p>
            <p class="fw-light mb-0">Tide Direction: <%= spot.enviroChars.tideMov %></p>
            </li>
            <li class="list-group-item">
              <h5>Access: </h5>
              <p class="fw-light mb-0">Description: <%= spot.access.description %></p>
              <p class="fw-light mb-0">Distance: <%= spot.access.distance%></p>
              <p class="fw-light mb-0">Walk: <%= spot.access.walk %></p>
              <p class="fw-light mb-0">Ease of Location: <%= spot.access.easyToFind %></p>
              <p class="fw-light mb-0">Public Access?: <%= spot.access.publicAccess %></p>
              <p class="fw-light mb-0">Special Access?: <%= spot.access.specialAccess %></p>
              </li>
            <li class="list-group-item">
              <h5>Miscellaneous Information: </h5>
              <p class="fw-light mb-0">Crowd During Week: <%= spot.miscDetails.weekCrowd %></p>
              <p class="fw-light mb-0">Crowd During Weekend: <%= spot.miscDetails.weekendCrowd%></p>
              <p class="fw-light mb-0">Dangers: <%= spot.dangers %></p>
              </li>
        </ul>
        <div class="card-body">
          <p><b>Note: </b>Edit and Delete temporarily disabled pending implementation of permissions</p>
          <a href="/surfspots/edit/<%=spot._id%>" class="card-link btn btn-info">Edit</a>
          <form class='d-inline'action="/surfspots/<%=spot._id%>?_method=DELETE" method="post"><button class="card-link btn btn-danger">Delete</button>
          </form>
        </div>
      </div>

    </div></div>
    
      
    </main>
  
    <%-include('partials/footer')%>
