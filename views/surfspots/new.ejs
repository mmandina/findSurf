<%- include('partials/head') %>

    <%- include('partials/navbar') %> 
    <div class="row ">
      
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-3">
    <form action="/surfspots" method="post" novalidate class="validate">
      <div class="mb-3">
        <label class = "form-label" for="title">Spot Name</label>
        <input
        class="form-control"
          type="text"
          name="surfspot[title]"
          id="title"
          placeholder="Spot Name"
          required
        />
      </div>
      <div class="mb-3">
        <label class = "form-label" for="location">Location</label>
        <input
        class="form-control"
          type="text"
          name="surfspot[location]"
          id="location"
          placeholder="Location"
          required
        />
      </div>
      <div class="mb-3">
        <label class = "form-label" for="bottomcomp">Bottom Type</label>
        <select class="form-select" aria-label="Default select example" name="surfspot[bottomcomp]" id="bottomcomp">
          <% for(let descriptor of surfSpotDescriptors.bottomcomp){ %>
          <option value="<%= descriptor %>"><%= descriptor %></option>
          <% } %>
        </select>
      </div>
      <div class="mb-3">
        <label class = "form-label" for="breaktype">Type of Break</label>
        <select class="form-select" aria-label="Default select example" name="surfspot[breaktype]" id="breaktype">
          <% for(let descriptor of surfSpotDescriptors.breaktypes){ %>
          <option value="<%= descriptor %>"><%= descriptor %></option>
          <% } %>
        </select>
      </div>
      <div class="mb-3">
        <label class = "form-label" for="difficulty">Difficulty</label>
        <select class="form-select" aria-label="Default select example" name="surfspot[difficulty]" id="difficulty">
          <% for(let descriptor of surfSpotDescriptors.difficulties){ %>
          <option value="<%= descriptor %>"><%= descriptor %></option>
          <% } %>
        </select>
      </div>
      <div class="mb-3">
        <label class = "form-label" for="description">Description</label>
        <textarea
        class="form-control"
        rows="3"
          type="text"
          name="surfspot[description]"
          id="description"
          placeholder="Description"
          required></textarea>
      </div>
      <div class="mb-3">
        <label class = "form-label" for="image">Image Url</label>
        <input
        class="form-control"
          type="text"
          name="surfspot[image]"
          id="image"
          placeholder="Image URL"
          required
        />
      </div>
      <button class="btn btn-primary mb-3">Add New Spot</button>
    </form>
    <a class="btn btn-secondary mb-3"href="/surfspots/">Back to All Spots</a>
  </div> </div>
  <script src="/formValidate.js"></script>
    <%-include('partials/footer')%>


  